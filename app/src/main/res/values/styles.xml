<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppThemeNoBackground" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorFullyTransparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/colored_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/base_margin</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle.Show">
        <item name="android:drawableLeft">@drawable/base_show</item>
        <item name="android:drawablePadding">@dimen/small_margin</item>
    </style>

    <style name="ButtonStyle.Help">
        <item name="android:drawableLeft">@drawable/base_help</item>
        <item name="android:drawablePadding">@dimen/small_margin</item>
    </style>

    <style name="SettingTextViewStyle">
        <item name="android:drawablePadding">@dimen/settings_drawable_padding</item>
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:paddingTop">@dimen/base_margin</item>
        <item name="android:paddingBottom">@dimen/base_margin</item>
        <item name="android:layout_marginBottom">@dimen/base_margin</item>
        <item name="android:layout_marginTop">@dimen/base_margin</item>
    </style>

</resources>
